<div class="container">
  <div class="row">
    <div class="col-12 col-md-6">
      <% @bookings.each do |booking| %>
        <%= render 'booking', booking: booking %>
      <% end %>
    </div>
    <div class="col-12 col-md-6">
      <% @bookings.each do |booking| %>
        <div class="card-messages card-blue px-4 pt-4 mb-3">
          <p><%= booking.lesson.sport_type %></p>
          <% booking.lesson.messages&.each do |message| %>
              <%= render 'message', message: message, booking: booking, lesson: booking.lesson %>
          <% end %>
          <%= render 'new_message', booking: booking, message: @message %>
        </div>
      <% end %>
    </div>
  </div>
</div>
