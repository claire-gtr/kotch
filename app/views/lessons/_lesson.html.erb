<div class="card-blue shadow d-flex justify-content-between p-4 mb-3">
  <div>
    <% if !current_user.coach %>
      <% if lesson.user_id %>
        <p class="mb-0 text-blue text-bold text-condensed text-small">Avec coach <%= lesson.user.first_name %></p>
      <% else %>
        <p class="mb-0 text-blue text-bold text-condensed text-small">Pas de coach</p>
      <% end %>
      <p><%= link_to "Je m'inscris", public_lesson_booking_path(lesson)  %></p>

    <% end %>
    <span class="title-sport"><%= lesson.sport_type.upcase %></span>
    <p class="mb-0 text-blue text-bold text-condensed text-small"><%= lesson.location.name%></p>
    <p class="mb-0 text-blue text-bold text-condensed text-small"><%= lesson.date.strftime(' %e %B %Y %lh%M')%></p>
    <% if !lesson.public && !current_user.coach %>
      <%= link_to public_lesson_booking_path(lesson) do %>
        <p class=" mb-0 text-small">Passer la séance en publique</p>
      <% end %>
    <% else %>
      <p class="mb-0 text-blue text-bold text-condensed text-small">Séance publique</p>
    <% end %>
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-transparent" data-toggle="modal" data-target="#exampleModal-<%= lesson.id %>">
      <%= lesson.users.count %> participants
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal-<%= lesson.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModal-<%= lesson.id %>Label" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content card-kotch">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <% lesson.users.each do |user| %>
              <div class="d-flex justify-content-between">
                <p><%= user.full_name %></p>
                <p><em><%= Booking.find_by(user: user, lesson: lesson).status %></em></p>
              </div>
            <% end %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-kotch btn-blue" data-dismiss="modal">Fermer</button>
          </div>
        </div>
      </div>
    </div>
    <% if lesson.status == "pending" || "canceled" %>
      <div class="pill pill-red text-center mt-3">
        <%= lesson.status %>
      </div>
    <% elsif lessons.status == 'confirmé' %>
      <div class="pill pill-green text-center mt-3">
        <%= lesson.status %>
      </div>
    <% end %>
  </div>
</div>
