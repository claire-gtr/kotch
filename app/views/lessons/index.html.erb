<% if current_user.coach %>
<div class="container pt-3">
  <div class="row">
    <% if @lessons.empty? %>
      <div class="col-12 text-center">
        <h2 class="text-center">Vous n'avez pas de séances à venir</h2>
      </div>
    <% end %>
    <div class="col-12">
      <% @lessons.each do |lesson| %>
        <%= render 'lesson', lesson: lesson %>
      <% end %>
    </div>
  </div>
</div>
<% else %>
  <div class="container pt-3">
    <div class="row">
      <div class="col-12">
        <div class="card-list-bookings-messages p-3">
          <% @lessons.each do |lesson| %>
            <%= render 'lesson', lesson: lesson %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
