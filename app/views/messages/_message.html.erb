<% if message.booking.nil? %>
  <% if message.lesson.user == current_user %>
    <div class="d-flex align-items-center justify-content-end">
      <div class="card-message card-kotch shadow p-3 text-blue mb-3">
        <div class="d-flex justify-content-between">
          <p class='mb-0 text-xbold text-coral text-condensed'><%= message.lesson.user.first_name.upcase %></p>
          <small class="text-muted font-weight-light"><%= message.created_at.hour %>:<%= message.created_at.min %></small>
        </div>
        <p class="mb-0 text-blue text-bold"><%= message.content %></p>
      </div>
      <%= cl_image_tag lesson.user.profile_picture, class:'avatar-small-mobile ml-3 mb-3 mb-lg-0' %>
    </div>
  <% else %>
