<div class="container">
  <div class="card-messages card-blue px-4 pt-4 mb-3" id="messages-<%= @lesson.id %>" style="background-image: url(<%= asset_path 'background1.png' %>);">
    <p><%= @lesson.sport_type %></p>
    <% @messages&.each do |message| %>
        <%= render 'message', message: message, lesson: @lesson %>
    <% end %>
    <%= render 'new_message', lesson: @lesson, message: @message %>
  </div>
</div>
