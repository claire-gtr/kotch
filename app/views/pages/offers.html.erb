<% canonical(offers_url) %>
<% content_for :meta_title, "Koach & Co | Des offres sans engagement pour un budget maitrisé" %>
<% content_for :meta_description, "Choisissez une formule simple, adaptée à votre budget et à votre pratique, sous forme d'abonnement mensuel sans engagement ou d'achat de séances à l'unité." %>

<% if user_signed_in? && current_user.person? %>
  <%= render 'offers_connected' %>
<% elsif user_signed_in? && current_user.enterprise? %>
  <%= render 'offers_connected_enterprise' %>
<% elsif @enterprise_signup.present? %>
  <%= render 'offers_disconnected_enterprise' %>
<% else %>
  <%= render 'offers_disconnected' %>
<% end %>
