<div class="container">
  <div class="row py-4">
    <div class="col text-center">
      <h1>Votre panier</h1>
      <p class='text-blue'>Achat de <strong><%= @pack_order.credit_count %></strong> crédits Koach pour <strong><%= (@pack_order.amount / 100).round %>€</strong></p>
      <button id="pay" class="btn btn-kotch btn-red">PAIEMENT</button>

      <script src="https://js.stripe.com/v3/"></script>
      <script>
        const paymentButton = document.getElementById('pay');
        paymentButton.addEventListener('click', () => {
          const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
          stripe.redirectToCheckout({
            sessionId: '<%= @pack_order.checkout_session_id %>'
          });
        });
      </script>
    </div>
  </div>
</div>
