                          <%= link_to sportive_profile_path(booking.user) do %>
                            <i class="fas fa-plus-circle"></i>
                          <% end %>
                        </ul>
                      </span>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
            <!-- End modal -->
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
