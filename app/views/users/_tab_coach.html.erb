                          <i class="fas fa-paper-plane pr-5"></i>
                        <% end %>
                      </ul>
                      </span>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
            <!-- End modal -->
          <% end %>
        </tbody>
      </table>
    </div>
